{
  "manifest_version": 3,
  "name": "Translation Extension",
  "description": "A Chrome extension for translation",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/App.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/icon.svg"
  }
} 